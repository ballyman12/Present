
@{
    ViewData["Title"] = "ShowUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @using WebApplication1.Models.Users
}

    <div class="container">
        <h2>User detail</h2>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Full name :</label>
                <label class="control-label col-sm-10" for="email">@ViewData["Name"]</label>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Address :</label>
                <label class="control-label col-sm-5" for="email">@ViewData["Address"]</label>
                <label class="control-label col-sm-1" for="email">City :</label>
                <label class="control-label col-sm-4" for="email">@ViewData["City"]</label>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Province :</label>
                <label class="control-label col-sm-3" for="email">@ViewData["Province"]</label>
                <label class="control-label col-sm-1" for="email">Country :</label>
                <label class="control-label col-sm-3" for="email">@ViewData["Country"]</label>
                <label class="control-label col-sm-1" for="email">Zipcode :</label>
                <label class="control-label col-sm-2" for="email">@ViewData["Zipcode"]</label>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Email :</label>
                <label class="control-label col-sm-10" for="email">@ViewData["Email"]</label>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Gender :</label>
                <label class="control-label col-sm-10" for="email">@ViewData["Gender"]</label>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <a type="button" href="/Users" class="btn btn-success">Back</a>
                </div>
            </div>
    </div>


@using WebApplication1.Models.Users
@{
    ViewData["Title"] = "CreateFormByHTMLHelpers";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

@model User


<div class="container">
    <h2>Example CreateFormByHTMLHelpers</h2>
    @using (Html.BeginForm("ShowUser", "Users", FormMethod.Get, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.Label("Name", "Name : ", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBox("Name", null, new { @class = "form-control", placeholder = "Enter full name" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Address", "Address : ", new { @class = "control-label col-sm-2" })
            <div class="col-sm-5">
                @Html.TextBox("Address", null, new { @class = "form-control", placeholder = "Enter address" })
            </div>
            @Html.Label("Phone", "Phone : ", new { @class = "control-label col-sm-1" })

            <div class="col-sm-4">
                @Html.TextBox("Phone", null, new { @type = "tel", @class = "form-control", placeholder = "Enter phone", maxlength = "10" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Province", "Province : ", new { @class = "control-label col-sm-2" })
            <div class="col-sm-3">
                @Html.DropDownList("Province",
                    new SelectList(Enum.GetValues(typeof(Province))),
                    "Select City",
                    new { @class = "form-control", required = "required" })

            </div>
            @Html.Label("Country", "Country : ", new { @class = "control-label col-sm-1" })

            <div class="col-sm-3">
                @Html.TextBox("Country", null, new { @class = "form-control", placeholder = "Enter country" })

            </div>
            @Html.Label("Zipcode", "Zipcode : ", new { @class = "control-label col-sm-1" })

            <div class="col-sm-2">
                @Html.TextBox("Zipcode", null, new { @class = "form-control", placeholder = "Enter zipcode" })

            </div>
        </div>
        <div class="form-group">
            @Html.Label("Email", "Email : ", new { @class = "control-label col-sm-2" })

            <div class="col-sm-10">
                @Html.TextBox("Email", null, new { @Type="email" ,@class = "form-control", placeholder = "Enter email" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Gender", "Gender : ", new { @class = "control-label col-sm-2" })

            <div class="radio-inline">
                <label class="radio-inline">@Html.RadioButtonFor(m => m.Gender, "Male", new { required = "required" })Male</label>
                <label class="radio-inline">@Html.RadioButtonFor(m => m.Gender, "Female")Female</label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success">Submit</button>
            </div>
        </div>

    }
</div>

